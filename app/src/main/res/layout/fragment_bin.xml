<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.home.BinFragment">

    <LinearLayout
        android:id="@+id/linearMenuTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#09AAFF"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <carbon.widget.ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:carbon_rippleColor="@color/transparent_click" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextTitleNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/recycle_bin" />


            <carbon.widget.ImageView
                android:id="@+id/btnMenuRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_menu_left"
                app:carbon_rippleColor="@color/transparent_click" />


        </LinearLayout>

    </LinearLayout>


    <com.newsoft.nscustom.view.recyclerview.NSRecyclerview
        android:id="@+id/rvBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearMenuTop" />

</androidx.constraintlayout.widget.ConstraintLayout>